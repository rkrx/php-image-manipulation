{
	"name": "rkr/image",
	"license": "MIT",
	"description": "A simple image manipulation library using gd-lib",
	"autoload": {
		"psr-4": {
			"Kir\\Image\\": "src/"
		}
	},
	"require": {
		"php": ">= 7.4",
		"ext-gd": "*"
	},
	"require-dev": {
		"phpunit/phpunit": "^9.5",
		"saggre/phpdocumentor-markdown": "0.1.3"
	},
	"suggest": {
		"ext-exif": "For automatic detection of image formats"
	},
	"scripts": {
		"phpstan": "phpstan analyse -c phpstan.neon --memory-limit=2G",
		"docs": "phpDocumentor"
	},
	"config": {
		"allow-plugins": {
			"symfony/flex": false
		}
	}
}
